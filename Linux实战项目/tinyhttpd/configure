#!/bin/bash

PATH_ROOT=$(pwd)
INCLUDE=$PATH_ROOT
SRC=$(ls *.c | tr '\n' ' ')
OBJ=$(echo ${SRC} | sed  's/\.c/\.o/g' )
SERVER_NAME=httpd
cc=gcc
LIB=-lpthread

#cgi
CGI_PATH=${PATH_ROOT}/cgi-bin
MATH_SRC=$(ls ${CGI_PATH} | grep "math" | grep -E '.c$')
MATH_BIN=cgi_math

cat << EOF > ${CGI_PATH}/Makefile
${MATH_BIN}:${MATH_SRC}
	${cc} -o \$@ \$^
.PHONY:clean
clean:
	rm -f ${MATH_BIN}
EOF

# sql
SQL_LIB=$(pwd)/lib
SQL_PATH=$(pwd)/mysql_cgi
SQL_BIN=${SQL_PATH}/cgi_insert
SQL_API=${SQL_PATH}/mysql_api.cpp
#INCLUDE=-I
#$(export LD_LIBRARY_PATH=${SQL_LIB}/lib)
#
#cat <<EOF > ${SQL_PATH}/Makefile
#
#${SQL_BIN}:cgi_insert.cpp ${SQL_API}
#	g++ -o \$@ \$^ ${INCLUDE} ${SQL_LIB} ${LIB}
#
#
#EOF
#

# http
cat << EOF > Makefile
.PHONY:all
all:${SERVER_NAME} cgi

${SERVER_NAME}:${OBJ}
	${cc} -o \$@ \$^ ${LIB}
%.o:%.c
	${cc} -c \$<
	
.PHONY:cgi
cgi:
	cd cgi-bin; make; cd -

.PHONT:output
output:all
	mkdir output
	cp ${SERVER_NAME} output/
	cp -rf log output/
	cp -rf conf	output/
	cp -rf wwwRoot	output/
	mkdir -p output/wwwRoot/cgi/sql
	cp ${CGI_PATH}/${MATH_BIN}	output/wwwRoot/cgi/
	cp http_ctl.sh output/http_ctl
	echo ${CGI_PATH}
	cp -rf ${SQL_LIB} output/
	cp ${SQL_BIN} output/wwwRoot/cgi/sql/

.PHONY:clean
clean:
	rm -rf ${SERVER_NAME} *.o output
	cd ${CGI_PATH};make clean; cd -
EOF

